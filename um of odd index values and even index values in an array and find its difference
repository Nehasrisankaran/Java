//find sum of odd index values and even index values in an array and find its difference
package NehaJava;
import java.util.*;
public class JavaBasics{

	public static void main(String ardgfd[]){
		Scanner sc=new Scanner(System.in);
		 int a=sc.nextInt();
		int ar[]=new int[a];
		for(int i=0;i<a;i++) {
			ar[i]=sc.nextInt();
		}
		int even=0;
		int odd=0;
		for(int i=0;i<a;i++) {
			if(i%2==0) {
				even=even+ar[i];
			}
			else {
				odd=odd+ar[i];
			}
		}
		System.out.println(even-odd);
		//System.out.println(odd);
		sc.close();
		}
	}

